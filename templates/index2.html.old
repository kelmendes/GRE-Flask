{% endblock %}

{%  block content  %}
	<div class="container">
		<div class="col-md-6 col-md-offset-3">
			<div class="jumbotron">
				<h1>Login</h1>
				<hr />
				<div class="row">
					<form class="form-signin" action='/' method='POST'>
						<div class="alert alert-warning">
								<strong>Aviso!</strong>2222 Não foi possível encontrar sua Conta.
						</div>
						<label for="inputEmail" class="sr-only">Email address</label>
						<input type='text' name='email' id='email' placeholder='email' class="form-control"></input>
					</br>
					<label for="inputPassword" class="sr-only">Password</label>
					<input type='password' name='pw' id='pw' placeholder='password' 	class="form-control"></input>
					</br>
					<input class="btn btn-lg btn-primary btn-block"type='submit' name='submit'></input>
				</form>
			</div>
			</div>
		</div>
	</div>
{% endblock  %}
